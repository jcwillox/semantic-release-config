{
  "name": "@jcwillox/semantic-release-config",
  "version": "0.0.0-dev",
  "description": "A semantic-release config with improved defaults and configurable through environment variables",
  "author": "Josh Willox <joshwillox@gmail.com> (https://github.com/jcwillox/)",
  "license": "MIT",
  "repository": "jcwillox/semantic-release-config",
  "keywords": ["semantic-release"],
  "type": "module",
  "scripts": {
    "semantic-release": "node ./dist/cli.js",
    "dev": "tsup --watch",
    "build": "tsup",
    "typecheck": "tsc",
    "lint": "biome lint",
    "lint:fix": "biome lint -w",
    "format": "biome format --write",
    "format:check": "biome format"
  },
  "dependencies": {
    "@semantic-release/error": "^4.0.0",
    "@semantic-release/git": "^10.0.1",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "destr": "^2.0.5",
    "execa": "^9.6.1",
    "lodash": "^4.17.21",
    "semantic-release": "^24.2.9",
    "semantic-release-slack-bot": "^4.0.2"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@tsconfig/node20": "20.1.8",
    "@types/lodash": "4.17.23",
    "@types/node": "24.10.9",
    "@types/semantic-release__error": "3.0.3",
    "tsup": "8.5.1",
    "typescript": "5.9.3"
  },
  "bin": "dist/cli.js",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "files": ["dist"],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./*": {
      "import": {
        "types": "./dist/*.d.ts",
        "default": "./dist/*.js"
      },
      "require": {
        "types": "./dist/*.d.cts",
        "default": "./dist/*.cjs"
      }
    },
    "./*/*": {
      "import": {
        "types": "./dist/*/*.d.ts",
        "default": "./dist/*/*.js"
      },
      "require": {
        "types": "./dist/*/*.d.cts",
        "default": "./dist/*/*.cjs"
      }
    },
    "./changelog": {
      "import": {
        "types": "./dist/changelog.d.ts",
        "default": "./dist/changelog.js"
      },
      "require": {
        "types": "./dist/changelog.d.ts",
        "default": "./dist/changelog.js"
      }
    },
    "./exec-cmd": {
      "import": {
        "types": "./dist/exec-cmd.d.ts",
        "default": "./dist/exec-cmd.js"
      },
      "require": {
        "types": "./dist/exec-cmd.d.ts",
        "default": "./dist/exec-cmd.js"
      }
    },
    "./exec-pre-cmd": {
      "import": {
        "types": "./dist/exec-pre-cmd.d.ts",
        "default": "./dist/exec-pre-cmd.js"
      },
      "require": {
        "types": "./dist/exec-pre-cmd.d.ts",
        "default": "./dist/exec-pre-cmd.js"
      }
    },
    "./force-publish": {
      "import": {
        "types": "./dist/force-publish.d.ts",
        "default": "./dist/force-publish.js"
      },
      "require": {
        "types": "./dist/force-publish.d.ts",
        "default": "./dist/force-publish.js"
      }
    }
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "packageManager": "pnpm@10.28.0",
  "engines": {
    "node": "^20 || ^22"
  },
  "pnpm": {
    "onlyBuiltDependencies": ["@biomejs/biome", "esbuild"]
  }
}
