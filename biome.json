{
  "$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
  "files": {
    "ignore": ["**/pnpm-lock.yaml", "**/dist/**/*"]
  },
  "formatter": {
    "enabled": true,
    "useEditorconfig": true
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedImports": "warn",
        "noUnusedVariables": "warn"
      },
      "style": {
        "noParameterAssign": "off",
        "useNamingConvention": {
          "options": {
            "strictCase": false,
            "conventions": [
              {
                "selector": {
                  "kind": "catchParameter"
                },
                "match": "_|err"
              }
            ]
          }
        }
      }
    }
  }
}
